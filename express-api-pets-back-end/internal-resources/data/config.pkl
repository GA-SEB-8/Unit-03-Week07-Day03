repo {
  // This name is shown in the header nav to navigate users home
  friendlyName = "Express API - Pets Back-End"
  // This must match the repo name as it appears on GitHub exactly
  name = "express-api-pets-back-end"
  type = "Lesson"
}

courses {
  new {
    name = "seb"
    microlessons {
      // add microlessons here, in the order they should be delivered
      mls.setup
      mls.concepts
      mls.definingTheDatabase
      mls.createRoute
      mls.indexRoute
      mls.showRoute
      mls.deleteRoute
      mls.updateRoute
      mls.cors
    }
  }
  new {
    name = "fallback"
    microlessons {
      // add microlessons here, in the order they should be delivered
      mls.setup
      mls.concepts
      mls.definingTheDatabase
      mls.createRoute
      mls.indexRoute
      mls.showRoute
      mls.deleteRoute
      mls.updateRoute
      mls.cors
    }
  }
}

